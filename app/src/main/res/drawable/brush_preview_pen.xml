<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <corners android:radius="@dimen/brush_preview_radius"/>
            <size android:height="@dimen/brush_preview_size" android:width="@dimen/brush_preview_size"/>
            <solid android:color="@color/brush_preview_color"/>
        </shape>
    </item>
    <item
        android:id="@+id/item_brush_drawable"
        android:height="25dp" android:width="25dp"
        android:top="13dp" android:left="13dp">
        <rotate
            android:fromDegrees="0"
            android:toDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%" >
            <shape
                android:shape="line">
                <stroke
                    android:width="2dip"
                    android:color="@android:color/white" />
            </shape>
        </rotate>
    </item>
</layer-list>